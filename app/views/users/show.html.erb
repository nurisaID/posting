<p id="notice"><%= notice %></p>

<p>
  <b>Photo:</b>
  <%= image_tag(@user.photo) %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

	<h2>add post </h2>
	<p>
	<%= form_for([@user, @user.posts.build]) do |f|%>
	<div class="field">
	<%= f.label :title %>
	<%= f.text_field :title %>
	</div>
	<div class="field">
	<%= f.label :description %>
	<%= f.text_area :description, :rows => 5%>
	</div>
	<div class="action">
	<%= f.submit%>
	</div>
	<% end %>
	</p>

<h2>post</h2>
	<div class="show">
	<%= @user.posts.each do |post| %>
	<p>
	<%= post.title %>
	</p>
	<p>
	<%= post.description%>
	</p>
	<% end %>
	</div>
<h2>Comments</h2>
	<%= @post.comments.each do |comment| %>
	<p>
	<b>Name :</b>
	<%= comment.name%>
	</p>
	<p>
	<b>Comment :</b>
	<%= comment.your_comment%>
	</p>
	<% end%>
<h2>Add Comment :</h2>
	<%= form_for([@post, @post.comments.build]) do |f|%>
	<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name%>
	</div>
	<div class ="field">
	<%= f.label :your_comment %>
	<%= f.text_area :your_comment %>
	</div>
	<div class ="action">
	<%= f.submit %>
	</div>
	<% end %>
